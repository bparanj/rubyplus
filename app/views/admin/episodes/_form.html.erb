<% form_for([:admin, @episode]) do |f| %>

<p>
   <b>Title</b><br />
   <%= f.text_field :title %>
 </p>

 <p>
   <b>Description</b><br />
   <%= f.text_area :description,  :class => "mceEditor" %>
 </p>

 <p>
   <b>Sequence</b><br />
   <%= f.text_field :sequence %>
 </p>

 <p>
    <b>Publish Date</b><br />
   <%= f.date_select :published_at %>
 </p>

 <p>
   <b>Download link</b><br />
   <%= f.text_field :download_link %>
 </p>

 <p>
   <b>Discuss link</b><br />
   <%= f.text_field :discuss_link %>
 </p>

 <p>
   <b>Size</b><br />
   <%= f.text_field :size %>
 </p>

 <p>
   <b>Duration</b><br />
   <%= f.text_field :duration %>
 </p>

 <p>
   <b>Tags</b><br />
   <%= text_field_tag('tags', @tags) %>
 </p>

 <p>
   <%= f.submit button_tag %>
 </p>

<% end %>