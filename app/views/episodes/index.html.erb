<fieldset>
<legend>Recent Episodes of Ruby and Rails Screencasts</legend>

<% for episode in @episodes %>

<div class="episode">
	<div class="side">
		<div class="number"><%= episode.sequence %></div>
		<div class="published_at"><%= display_published_at(episode) %> </div>
	</div>
	<div class="main">
		<h2><%= link_to episode.title, episode %></h2>
		<div class="description">
			<%= raw(episode.description) %>
		</div>
		<div class="download">
			<%= link_to "Download", download_episode_url(episode) %>
			<span class="stats"> (<%=h episode.size %> MB, <%=h episode.duration %>)</span>
		</div>
		
	</div>

</div>
<% end %>

