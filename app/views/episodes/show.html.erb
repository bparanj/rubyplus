<% @page_title = @episode.title %>

<fieldset>
<legend> </legend>

<div class="episode">
	<div class="side">
		<div class="number"><%= @episode.sequence %></div>
		<div class="published_at"><%= display_published_at(@episode)%>   </div>	
	</div>
	<div class="main">
		<h2><%= @episode.title %></h2>
		<div class="description">
			<%= raw(@episode.description) %>
		</div>
		
		  <div class="download">
			<%= link_to "Download", download_episode_url(@episode) %>
			<span class="stats"> (<%= @episode.size %> MB, <%= @episode.duration %>)</span>
		  </div>
	</div>

</div>

</fieldset>